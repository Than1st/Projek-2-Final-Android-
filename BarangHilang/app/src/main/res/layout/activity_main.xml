<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.android.baranghilang.MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_person_cyan_24dp"/>

        <LinearLayout
            android:layout_width="260dp"
            android:layout_gravity="right"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textAlignment="center"
                android:text="Selamat Datang!"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txt_nim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="NIM"/>

            <TextView
                android:id="@+id/txt_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NAMA"
                android:textSize="20dp"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="150dp">

        <Button
            android:id="@+id/btn_tambah_brghilang"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:background="#00D8D8"
            android:text="Tambah Barang Hilang"/>

        <Button
            android:id="@+id/btn_List_brghilang"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:background="#1DC900"
            android:text="List barang Hilang"/>

        <Button
            android:id="@+id/btn_Profile"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:background="#D37500"
            android:text="Profile"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/btn_logout"
            android:background="#C50000"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:text="LOGOUT"/>

    </LinearLayout>



    </RelativeLayout>